{
  "manifest_version": 3,
  "name": "Universal Digital Assistant (UDA)",
  "version": "0.9.1",
  "content_scripts": [
    {
      "js": [
        "InjectHeaders.js"
      ],
      "run_at": "document_start",
      "matches": [
        "*://*/*"
      ]
    },
    {
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_end",
      "js": [
        "InjectSDK.js"
      ],
      "css": [

      ],
      "media": []
    }
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "csp_rules",
      "enabled": true,
      "path": "cspRules.json"
    }]
  },
  "background": {
    "service_worker": "./assets/UDABackground.js"
  },
  "permissions": [
    "identity",
    "identity.email",
    "storage",
    "tabs",
    "activeTab",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.js",
        "logos/*",
        "assets/*",
        "./*"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "icons": {
    "16": "logos/nist-logo-16x16.png",
    "32": "logos/nist-logo-32x32.png",
    "48": "logos/nist-logo-48x48.png",
    "128": "logos/nist-logo-128x128.png"
  }
}
