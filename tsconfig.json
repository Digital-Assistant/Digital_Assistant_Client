{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "strict": false,
    "module": "es6",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": "src",
    "sourceMap": true,
    "incremental": true,
    "paths": {
      "@/*": ["*"]
    },
    "plugins": [
      {
        "transform": "typescript-json/lib/transform"
      }
    ]
  },
  "include": ["src/**/*", "webpack.config.ts", "configs/webpack/webpack.common.ts", "configs/webpack/webpack.dev.ts", "configs/webpack/webpack.prod.ts"],
  "exclude": ["node_modules", "dist"]
}
